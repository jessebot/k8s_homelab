/* Matches the entire screen */
Screen {
   align: center middle;
   scrollbar-background: #3a3a3a;
   scrollbar-background-active: #3a3a3a;
   scrollbar-background-hover: #3a3a3a;
   scrollbar-color-hover: orange;
   scrollbar-color: #5f5fd7;
}

Tooltip {
  background: rgb(35,35,54) 50%;
  color: #7a7a7a;
  border: round gray 80%;
  padding-bottom: 0;
}

Button {
  background: rgb(123,120,191) 10%;
  border-top: tall rgb(65,72,104) 60%;
  border-bottom: tall rgb(0,0,0) 30%;
}

Input {
  background: #7a7a7a 8%;
  color: white 75%;
  border: tall black 30%;
}

Input.-invalid {
   border: tall magenta 60%;
}

Input.-valid:focus {
   border: tall $success;
}

/* Matches the bottom footer help text on every page */
Footer {
   background: $background 1%;
}

Footer .footer--description {
   color: cornflowerblue;
   background: rgb(35,35,54) 50%;
}

Footer .footer--key {
   color: #282727;
   background: cornflowerblue;
}

Footer .footer--highlight {
   color: orange;
   background: rgb(35,35,54) 50%;
}

Footer .footer--highlight-key {
  color: #282727;
  background: orange;
}

/* truthy value rows with switches */
.bool-switch-row {
    align: left middle;
    layout: grid;
    grid-size: 3;
    grid-columns: 0.8fr 1fr 0.1fr;
}

.bool-switch-row-label {
    padding-top: 1;
    padding-bottom: 1;
    align: left middle;
}

.bool-switch-row-switch {
}

/* two bool-switch-rows side by side */
.double-switch-row {
    align: left middle;
    layout: grid;
    grid-size: 2;
    grid-columns: 0.8fr 1fr;
}

/* k9s row of a switch and input field */
.k9s-switch-input-row {
    align: left middle;
    layout: grid;
    grid-size: 2;
    grid-columns: 0.8fr 1fr;
}

.k9s-switch-input-row .input-row {
    padding-top: 1;
}

/* any basic "label: input" row */
.input-row {
    align: left middle;
    layout: grid;
    grid-size: 2;
    grid-columns: 0.3fr 1fr;
}

/* Label in "label: input" row */
.input-row-label {
    align: center middle;
    padding-top: 1;
    padding-bottom: 1;
    width: 100%;
}

/* Input in "label: input" row */
.input-row-input {
    align: center middle;
}

/* radio set for logging config */
.radioset-row {
    align: left middle;
    layout: grid;
    grid-size: 2;
    grid-columns: 0.3fr 1fr;
    margin-bottom: 1;
}

.radioset-row-label {
    content-align: center middle;
    height: 6;
}

.radioset-row-radioset {
    align: center middle;
}

#config-screen {
    layout: grid;
    grid-size: 1;
    grid-rows: 1.3fr 1.2fr 0.9fr;
    margin-left: 1;
    margin-right: 1;
    align: center middle;
}

/* interactive (TUI) config box */
#tui-config{
    padding-top: 2;
    padding-left: 3;
    margin-left: 1;
    margin-right: 1;
    margin-top: 2;
    margin-bottom: 2;
    border: solid lime;
    background: rgb(35,35,54) 50%;
    layout: grid;
    grid-rows: 0.8fr 1fr;
    align: center middle;
}

/* logging config box */
#logging-config {
    padding-left: 3;
    margin-top: 1;
    margin-left: 1;
    margin-right: 1;
    margin-bottom: 3;
    border: solid gold;
    background: rgb(35,35,54) 50%;
}

/* password manager config box */
#password-manager-config {
    padding-left: 3;
    padding-top: 1;
    margin-left: 1;
    margin-right: 1;
    margin-bottom: 1;
    border: solid cornflowerblue;
    background: rgb(35,35,54) 50%;
}

.help-text {
    color: gray;
    width: 100%;
}
