$bluish_white: rgb(189,216,255);
$lavender: rgb(174,168,248);
$spacechalk_red: rgb(255,141,135);
$neon_magenta: rgb(242,137,249);
$light_pink: rgb(255,175,249);
$orange: rgb(253,205,54);
$soft_yellow: rgb(249,249,134);
$soft_green: rgb(193,255,135);
$spacechalk_lime: rgb(168,253,87);
$sky_blue: rgb(92,201,253);
$cornflower: rgb(95,135,255);
$light_cornflower: rgb(122,162,247);
$blue_gray: rgb(86,95,137);
$dark_gray: rgb(58,58,58);
$navy: rgb(35,35,54);

#config-screen {
    grid-size: 1;
    grid-rows: 0.85fr 1fr 1.2fr;
    margin-left: 1;
    margin-right: 1;
    align: center middle;
    width: 90%;
    height: 90%;
}

/* logging config box */
#logging-config {
    padding-left: 3;
    margin-bottom: 2;
    border: solid $cornflower;
    background: $navy 50%;
}

.radio-and-input-row {
    align: left middle;
    grid-size: 2;
    grid-columns: 0.75fr 1.3fr;
}


/* radio set for logging config */
.radioset-row {
    align: left middle;
    layout: grid;
    grid-size: 2;
    grid-columns: 0.3fr 1fr;
    margin-bottom: 1;
}

.radioset-row-label {
    content-align: left middle;
    height: 6;
    color: $bluish_white;
}

.radioset-row-radioset {
    align: left middle;
}

/* truthy value rows with switches */
.bool-switch-row {
    align: left middle;
    layout: grid;
    grid-size: 2;
}

.bool-switch-row-label {
    padding-top: 1;
    padding-bottom: 1;
    align: left middle;
    color: $bluish_white;
    width: 100%;
}

.bool-switch-row-switch {
}

/* two bool-switch-rows side by side */
.double-switch-row {
    align: left middle;
    layout: grid;
    grid-size: 2;
}

/* k9s row of a switch and input field */
.k9s-switch-input-row {
    align: left middle;
    layout: grid;
    grid-size: 2;
    grid-columns: 0.8fr 1fr;
}

.k9s-switch-input-row .input-row {
    padding-top: 1;
}

/* any basic "label: input" row */
.input-row {
    align: left middle;
    layout: grid;
    grid-size: 2;
    grid-columns: 0.3fr 1fr;
}

/* Label in "label: input" row */
.input-row-label {
    align: center middle;
    padding-top: 1;
    padding-bottom: 1;
    width: 100%;
    color: $bluish_white;
}

/* Input in "label: input" row */
.input-row-input {
    align: center middle;
}

/* password manager config box */
#password-manager-config {
    padding-left: 3;
    padding-right: 1;
    padding-top: 1;
    border: solid $cornflower;
    background: $navy 50%;
}

.help-text {
    color: gray;
    width: 100%;
}

/* interactive (TUI) config box */
#tui-config{
    padding-top: 2;
    padding-left: 3;
    margin-top: 2;
    margin-bottom: 1;
    border: solid $cornflower;
    background: $navy 50%;
    layout: grid;
    grid-rows: 0.8fr 1fr;
    align: center middle;
}
